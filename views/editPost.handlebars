<article>
  <a href="/dashboard" class="is-pulled-right">Dashboard</a>
  <h3 class="title mt-5">Edit Post</h3><hr>
  <form class="editPost">
    <div>
        <label for="post-title">Post title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="postText">post content:</label>
      <input class="textarea" name="postText" type="text" value="{{post.postText}}" />
    </div>
    <div class="is-pulled-right">
       Created: {{format_date post.created_at}}
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">Save</button>
    <button type="button" class="button is-danger delete-post-btn">Delete</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/editPost.js"></script>
<script src="/javascript/deletePost.js"></script>
<script src="/javascript/comment.js"></script>